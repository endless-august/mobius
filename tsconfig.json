{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "removeComments": true,
        "noImplicitAny": false,

        "paths": {
            "@/api/*": ["../../apps/mobius-api/src/*"],
            "@/web/*": ["../../apps/mobius-web/src/*"],
            "@/core/*": ["../../apps/mobius-core/src/*"],
            "@/utils/*": ["../../apps/mobius-utils/src/*"]
        }
    }
}
